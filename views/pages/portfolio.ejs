<article class="portfolio" data-page="portfolio">
  <header>
    <h2 class="h2 article-title">Portfolio</h2>
  </header>

  <section class="projects">
    <ul class="filter-list">
      <li class="filter-item">
        <button class="active" data-filter-btn>All</button>
      </li>
      <li class="filter-item">
        <button data-filter-btn>Web development</button>
      </li>
      <li class="filter-item">
        <button data-filter-btn>Data Analytics</button>
      </li>
      <li class="filter-item">
        <button data-filter-btn>Computer Vision</button>
      </li>
      <li class="filter-item">
        <button data-filter-btn>Natural Language Processing</button>
      </li>
      <li class="filter-item">
        <button data-filter-btn>Distributed Systems</button>
      </li>
    </ul>

    <div class="filter-select-box">
      <button class="filter-select" data-select>
        <div class="select-value" data-select-value>Select category</div>
        <div class="select-icon">
          <ion-icon name="chevron-down"></ion-icon>
        </div>
      </button>

      <ul class="select-list">
        <li class="select-item">
          <button data-select-item>All</button>
        </li>
        <li class="select-item">
          <button data-select-item>Web development</button>
        </li>
        <li class="select-item">
          <button data-select-item>Data Analytics</button>
        </li>
        <li class="select-item">
          <button data-select-item>Computer Vision</button>
        </li>
        <li class="select-item">
          <button data-select-item>Natural Language Processing</button>
        </li>
        <li class="select-item">
        <button data-select-item>Distributed Systems</button>
      </li>
      </ul>
    </div>

    <ul class="project-list">
      <% projects.forEach(project => { %>
      <li
        class="project-item active"
        data-filter-item
        data-category="<%= project.category %>"
      >
        <a href="<%= project.link %>" target="_blank">
          <figure class="project-img">
            <div class="project-item-icon-box">
              <ion-icon name="eye-outline"></ion-icon>
            </div>
            <img
              src="<%= project.imgSrc %>"
              alt="<%= project.imgAlt %>"
              loading="lazy"
            />
          </figure>
          <h3 class="project-title"><%= project.title %></h3>
          <p class="project-category"><%= project.category %></p>
        </a>
      </li>
      <% }) %>
    </ul>
  </section>
</article>
